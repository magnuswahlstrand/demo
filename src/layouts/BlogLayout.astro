---
import Layout from './Layout.astro'
import ArticleHeader from '../components/ArticleHeader.astro'

const {frontmatter} = Astro.props;
---

<Layout>
    <div class="pt-4">
        <ArticleHeader date={frontmatter.date} title={frontmatter.title} subtitle={frontmatter.subtitle}/>
        <article class="prose mt-4 xl:prose-xl">
            <slot/>
        </article>
    </div>
</Layout>
