---
import AnchorWrapper from "./AnchorWrapper.astro"
const {title, subtitle, date, href = ''} = Astro.props;
---

<div class="container md:mx-auto mx-0">
    <div class="flex flex-col">
        <div class="">
            <AnchorWrapper href={href}>
                <h1 class="font-bold text-3xl md:text-5xl">{title}</h1>
                {subtitle != '' ? <h3 class="font-thin text-2xl">{subtitle}</h3> : null}
            </AnchorWrapper>
            <div class="text-gray-400 italic text-md font-lora pb-2">Posted on {date} | Magnus Wahlstrand</div>
        </div>
    </div>
</div>
